@import "~normalize.css";
.container {
  margin: 0 auto;
  width: 1080px;
}
img {
  display: inline-block;
  width: 100%;
}
.ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
.overlay-container {
  position: fixed;
  pointer-events: none;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
}
.overlay-container.overlay-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.overlay-container .overlay-mask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  transition: opacity 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  opacity: 0;
}
.overlay-container .overlay-mask.overlay-mask-show {
  opacity: 1;
}
article,
aside,
blockquote,
body,
button,
dd,
details,
div,
dl,
dt,
fieldset,
figcaption,
figure,
footer,
form,
h1,
h2,
h3,
h4,
h5,
h6,
header,
hgroup,
hr,
input,
legend,
li,
menu,
nav,
ol,
p,
pre,
section,
td,
textarea,
th,
ul {
  margin: 0;
  padding: 0;
  vertical-align: baseline;
}
ol,
ul,
li {
  list-style: none;
}
body {
  font: 14px/1.5 courier new, courier, monospace;
  color: #333;
  background-color: #fff;
}
a {
  text-decoration: none;
  cursor: pointer;
  color: #1976d2;
}
